<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.jiayusoft.mobile.shengli.emr.community.selfupload.mydescribe.UploadMyDescribeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/self_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/self_describe"
            android:textColor="@color/uploadtitle"
            android:padding="@dimen/activity_view_padding"
            android:textSize="18sp"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/self_describe"
            style="@style/one_line_material"
            app:baseColor="@color/material_base_color"
            app:primaryColor="@color/material_primary_green"
            app:maxCharacters="200"
            app:floatingLabel="highlight"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/photo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:text="@string/self_photo"
            android:textColor="@color/uploadtitle"
            android:padding="@dimen/activity_view_padding"
            android:textSize="18sp"/>
        <GridView
            android:id="@+id/photo_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="4dip"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="2dip"  />

    </LinearLayout>

</LinearLayout>
